pipeline{
    agent {
      docker{
        image 'python:3.11-slim'
      }
    }
  
  stages{
    stage('getCode'){
      steps{
        checkout scm  
      }
    }

    stage('installDependencies'){
      steps{
        sh 'pip install -r requirements.txt' 
       }
    }

    stage('runApp'){
      steps{
          sh 'python app.py'
        }
    }
    
    
  }
}
